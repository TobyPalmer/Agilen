	    />
	<TextView
	    android:id="@+id/stopDateText"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textStyle="bold" 
	    android:text="Till: "
	    android:textSize="30sp"
	    /> 
