<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_piechart_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearTotal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="10dp"
            android:text="Totaltid: "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/flexTime"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="10dp"
            android:text="Flextid: "
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pie_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerInParent="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom = "true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LinearTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/totalTimeSquare"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/fa_square"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:width="0dp" />

            <TextView
                android:id="@+id/directTime"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="10"
                android:text=""
                android:textSize="30sp"
                android:width="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearFlex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/flexTimeSquare"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@string/fa_square"
                android:textColor="@color/orange"
                android:textSize="30sp"
                android:width="0dp" />

            <TextView
                android:id="@+id/indirectTime"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="10"
                android:text=""
                android:textSize="30sp"
                android:width="0dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>