<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimestampActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
             >

            <Button
                android:id="@+id/prevDay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="@string/fa_arrow_left" 
                android:textColor="@color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/day"
                android:background="@color/white"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="2014-04-15"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nextDay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="@string/fa_arrow_right" 
                android:textColor="@color/white"
                android:textSize="50sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/l_view"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
			android:gravity="top"
			android:textSize="50sp">

        </ListView>

        <TextView
            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Total"
            android:textSize="25sp"
            android:gravity="bottom" 
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#aaa9a9"
            android:gravity="bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/deselectAll"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="2"
                android:background="@color/orange"
                android:text="Avmarkera alla"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/selectAll"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@color/orange"
                android:text="Markera alla"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>