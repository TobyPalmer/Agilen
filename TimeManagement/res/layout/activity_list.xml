<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimestampActivity" >
   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    
    	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		>

            <Button
                android:id="@+id/prevDay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="@string/fa_arrow_left" 
                android:textColor="#FFF"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/day"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="2014-04-15"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nextDay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="@string/fa_arrow_right" 
                android:textColor="#FFF"
                android:textSize="50sp" />

        </LinearLayout>
    
    	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		>
        <ListView
            android:id="@+id/l_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3" 
			android:textSize="50sp"
            >
        </ListView>
          </LinearLayout>

        <TextView
            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="bottom|fill_vertical|fill_horizontal"
            android:text="Total"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
              >

            <Button
                android:id="@+id/deselectAll"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@color/orange"
                android:text="Avmarkera alla"
                android:textColor="#FFF"
                android:textSize="30sp"
                 />

            <Button
                android:id="@+id/selectAll"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:background="@color/orange"
                android:text="Markera alla"
                android:textColor="#FFF"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>